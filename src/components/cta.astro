---
// import Link from "./ui/link.astro";
import { t } from "i18next";
---

<div
  class="bg-accent p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-primary text-4xl md:text-6xl tracking-tight font-extrabold">
    {t("cta.goPackGo")}
  </h2>
  <p class="text-content-400 mt-4 text-lg md:text-xl">
    <!-- Add text below about how to join a chapter -->
    {t("cta.subtext")}
  </p>
  <div class="flex mt-5">
    <a href={t("cta.button1Link")} role="button" class="btn btn-primary mr-12">{t("cta.button1Text")}</a>
    <a href={t("cta.button2Link")} role="button" class="btn btn-primary">{t("cta.button2Text")}</a>
  </div>
</div>
