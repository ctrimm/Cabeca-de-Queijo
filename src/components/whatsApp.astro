---
import { Image } from "astro:assets";
import WhatsAppCommunityLogo from "assets/whatsappcommunity.png"
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
---

<div
  class="bg-accent p-4 md:px-20 md:py-16 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-primary text-2xl md:text-3xl tracking-tight font-bold">
    {t("whatsApp.title")}
  </h2>
  <p class="text-content-400 mt-4 text-sm md:text-sm">
    <!-- Add text below about how to join a chapter -->
    {t("whatsApp.subtext")}
  </p>
  <div class="flex items-center cursor-pointer">
    <a href="https://chat.whatsapp.com/DCeTE832kUTJfAiskx4krA" target="_blank" rel="noopener noreferrer" class="text-primary text-lg md:text-xl">
        <Image
          src={WhatsAppCommunityLogo}
          alt={t("whatsApp.altTag")}
          widths={[128, 128]}
          aspectRatio="1:1"
          sizes="(max-width: 748px) 128px, 128px"
          loading="eager"
          format="avif"
          class="pt-2"
        />
    </a>
  </div>
  
