---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="banner-bar" class="bg-green-500 text-white py-2 px-4 text-center">
  <div class="flex justify-between items-center">
    <p class="text-sm flex-grow text-center">
      {t('banner.text')} <a href="https://chat.whatsapp.com/IY3vw63xn8S6tVjsHsYuVp" target="_blank" class="underline font-bold">{t('banner.cta')} ğŸ§€ğŸ‡§ğŸ‡·</a>
    </p>
    <button id="close-banner" class="text-white hover:text-gray-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>

<script>
  const bannerBar = document.getElementById('banner-bar');
  const closeBanner = document.getElementById('close-banner');

  if (bannerBar && closeBanner) {
    closeBanner.addEventListener('click', () => {
      bannerBar.style.display = 'none';
    });
  }
</script>
