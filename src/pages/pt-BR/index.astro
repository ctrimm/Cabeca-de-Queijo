---
import { changeLanguage } from "i18next";
import Container from "@components/container.astro";
import CallToAction from "@components/cta.astro";
import SellingPoints from "@components/sellingPoints.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import NextGames from "@components/nextGames.astro";

changeLanguage("pt-BR");
---

<Layout
  seoTitle="Cabeça de Queijo | O Clube de Fãs Brasileiro do Green Bay Packers"
  seoDescription="Cabeça de Queijo é o Clube de Fãs Brasileiro do Green Bay Packers. Somos o maior clube de fãs dos Packers no Brasil. Somos dedicados ao Green Bay Packers, a NFL e à base de fãs brasileira."
  seoOpenGraph={{
    basic: {
      title: "Cabeça de Queijo",
      type: "website",
      image: "https://cabecadequeijo.com/open-graph.png",
      url: "https://cabecadequeijo.com/",
    },
    image: {
      alt: "Captura de tela da página inicial do Cabeça de Queijo",
    },
  }}
>
  <Container>
    <Hero />
    <NextGames />
    <SellingPoints />
    <!-- <ChapterStats /> -->
    <CallToAction />
  </Container>
</Layout>
