---
import { SEO } from "astro-seo";
import { changeLanguage } from "i18next";
import Container from "@components/container.astro";
import ChaptersList from "@components/chaptersList.astro";
import Layout from "@layouts/Layout.astro";
import StartAChapter from "@components/startAChapter.astro";

changeLanguage("pt-BR");
---

<Layout title="Chapters">
  <SEO
    title="Capítulos de Fãs do Green Bay Packers no Brasil"
    description="Encontre e junte-se a um capítulo local de fãs do Green Bay Packers no Brasil. Conecte-se com outros fãs, assista aos jogos juntos e mostre seu apoio ao time."
    openGraph={{
      basic: {
        title: "Capítulos do Clube de Fãs do Green Bay Packers no Brasil",
        type: "website",
        image: "https://cabecadequeijo.com/og/og-chapters-pt.png",
      },
      image: {
        alt: "Captura de tela da página de capítulos do Cabeça de Queijo",
      },
    }}
  />
  <Container>
    <ChaptersList />
    <StartAChapter />
  </Container>
</Layout>
