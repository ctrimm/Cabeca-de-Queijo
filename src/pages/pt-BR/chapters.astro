---
import { changeLanguage } from "i18next";
import Container from "@components/container.astro";
import ChaptersList from "@components/chaptersList.astro";
import Layout from "@layouts/Layout.astro";
import StartAChapter from "@components/startAChapter.astro";

changeLanguage("pt-BR");
---

<Layout
  seoTitle="Capítulos de Torcedores do Green Bay Packers no Brasil"
  seoDescription="Encontre e junte-se a um capítulo local de torcedores do Green Bay Packers no Brasil. Conecte-se com outros torcedores, assista aos jogos juntos e mostre seu apoio ao time."
  seoOpenGraph={{
    basic: {
      title: "Capítulos do Clube de Torcedores do Green Bay Packers no Brasil",
      type: "website",
      image: "https://cabecadequeijo.com/og/og-chapters-pt.png",
      url: "https://cabecadequeijo.com/pt-BR/chapters/",
    },
    image: {
      alt: "Captura de tela da página de capítulos do Cabeça de Queijo",
    },
  }}
>
  <Container>
    <ChaptersList />
    <StartAChapter />
  </Container>
</Layout>
