---
import Container from "@components/container.astro";
import CallToAction from "@components/cta.astro";
import SellingPoints from "@components/sellingPoints.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import NextGames from "@components/nextGames.astro";
import { getLangFromUrl } from '../i18n/utils';
import { getSeoMetadata } from '../i18n/seo';

const lang = getLangFromUrl(Astro.url);
const seo = getSeoMetadata('index', lang);
---

<Layout
  seoTitle={seo.title}
  seoDescription={seo.description}
  seoOpenGraph={{
    basic: {
      title: "CabeÃ§a de Queijo",
      type: "website",
      image: seo.ogImage,
      url: seo.ogUrl,
    },
    image: {
      alt: seo.ogAlt,
    },
  }}
>
  <Container>
    <Hero />
    <NextGames />
    <SellingPoints />
    <CallToAction />
  </Container>
</Layout>
