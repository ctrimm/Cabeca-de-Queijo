---
import { changeLanguage } from "i18next";
import Container from "@components/container.astro";
import CallToAction from "@components/cta.astro";
import SellingPoints from "@components/sellingPoints.astro";
import Hero from "@components/hero.astro";
import Layout from "@layouts/Layout.astro";
import NextGames from "@components/nextGames.astro";

changeLanguage("en");
---

<Layout
  seoTitle="Cabeça de Queijo | The Brazilian Green Bay Packers Fan Club"
  seoDescription="Cabeça de Queijo is the Brazilian Green Bay Packers Fan Club. We are the largest Packers fan club in Brazil. We are dedicated to the Green Bay Packers, the NFL, and the Brazilian fanbase."
  seoOpenGraph={{
    basic: {
      title: "Cabeça de Queijo",
      type: "website",
      image: "https://cabecadequeijo.com/open-graph.png",
      url: "https://cabecadequeijo.com",
    },
    image: {
      alt: "Cabeça de Queijo Homepage Screenshot",
    },
  }}
>
  <Container>
    <Hero />
    <NextGames />
    <SellingPoints />
    <!-- <ChapterStats /> -->
    <CallToAction />
  </Container>
</Layout>
